                       <Label Grid.Row="0"> Factorial </Label>
                       <Label Grid.Row="1" x:Name="FactorialLabel" HorizontalAlignment="Center"> </Label>
                   </Grid>
               </Grid>
               
           </Grid>   
           
           <Button Grid.Row="1" Width="100" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
